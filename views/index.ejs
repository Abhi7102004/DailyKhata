<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/app.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <%- include('partials/header') %>
    <div class="px-20 pt-10 w-full">
      <p class="text-md font-bold mb-4">All Hisaab Kitaab</p>
      <div class="grid xl:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-6">
        <% files.forEach(file => { %>
        <div>
          <a href="/show/<%= file %>" class="block">
            <div
              class="flex justify-between items-center bg-indigo-600 px-6 py-4 rounded-lg shadow-md transition-transform duration-300 ease-in-out transform hover:scale-105"
            >
              <div class="flex items-center">
                <img
                  class="w-8 h-8 rounded-full"
                  src="https://img.icons8.com/?size=100&id=0eqL8X2cFEqY&format=png&color=000000"
                  alt=""
                />
                <span class="ml-3 text-white font-semibold text-lg"
                  ><%= file %></span
                >
                <div class="px-1 py-1 rounded-full bg-white ml-3 mt-1">
                  <img
                    class="w-4 h-4"
                    src="https://img.icons8.com/?size=100&id=7789&format=png&color=000000"
                    alt=""
                  />
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <a
                  href="/edit/<%= file %>"
                  class="text-white hover:text-blue-200 transition-colors duration-300 flex items-center"
                >
                  <img
                    class="w-4 h-4 mr-1"
                    src="https://img.icons8.com/?size=100&id=pzpApVcbIOwm&format=png&color=FFFFFF"
                    alt=""
                  />
                  Edit
                </a>
                <a
                  href="/delete/<%= file %>"
                  class="text-red-50 hover:text-red-300 transition-colors duration-300 flex items-center"
                >
                  <img
                    class="w-4 h-4 mr-1"
                    src="https://img.icons8.com/?size=100&id=8329&format=png&color=FA5252"
                    alt=""
                  />
                  Delete
                </a>
              </div>
            </div>
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <script type="module" src="/script.js"></script>
  </body>
</html>
